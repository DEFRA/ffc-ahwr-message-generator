{
  "name": "ffc-ahwr-message-generator",
  "version": "1.7.0",
  "description": "Service for creating messages to send to SFD",
  "homepage": "https://github.com/DEFRA/ffc-ahwr-message-generator",
  "main": "app/index.js",
  "type": "module",
  "scripts": {
    "pretest": "npm run lint",
    "test": "jest --runInBand --forceExit",
    "test:watch": "jest --coverage=false --onlyChanged --watch --runInBand",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test:debug": "node --inspect-brk=0.0.0.0 ./node_modules/jest/bin/jest.js --coverage=false --onlyChanged --watch --runInBand --no-cache",
    "start:watch": "nodemon --inspect=0.0.0.0 --ext js --legacy-watch app/index.js",
    "start:debug": "nodemon --inspect-brk=0.0.0.0 --ext js --legacy-watch app/index.js"
  },
  "author": "Defra",
  "contributors": [
    "Rob Catton rob.catton@defra.gov.uk"
  ],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@azure/identity": "^4.11.0",
    "@hapi/hapi": "^21.4.2",
    "applicationinsights": "^2.9.7",
    "ffc-ahwr-common-library": "^2.4.0",
    "ffc-messaging": "^2.10.1",
    "hapi-pino": "12.1.0",
    "http-status-codes": "^2.3.0",
    "joi": "17.13.3",
    "pg": "^8.14.1",
    "sequelize": "^6.37.6"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/plugin-transform-modules-commonjs": "^7.26.3",
    "babel-jest": "^29.7.0",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "nodemon": "3.0.1",
    "pino-pretty": "^7.5.1",
    "standard": "17.1.0"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "test",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/test-output/**"
    ]
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-modules-commonjs"
    ]
  }
}
